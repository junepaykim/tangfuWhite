<!-- added colours to stop text switching to white after being disabled -->
<panel>
    <attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" horizontal_inset="0" />

    <!-- promise box appearance goes on here once the art asssets are done -->
    <container class="plain_box" id="anbx" appearance="boxes/custom/interaction/promise/paper" red_replacement="bg" blue_replacement="fg">
        <attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" horizontal_inset="0" />

        <!-- the response text -->
        <widget class="button" font="text" id="answ" alignment="left, centre_y" multiline="true" appearance="" auto_size="vertical" colour="text">
            <translation id="hint" translation_id="517423" type="use" value="This response will result in a promise being made[COMMENT: AREA: Interaction panel; SUB-AREA: Promise response button; FR-BN: 37500; TONE: Formal; CHARLIMIT: None; NOTE: Explanatory hint indicating a promise will be generated by selecting this response]" />
        </widget>

        <!-- button to show promise popups -->
        <widget class="icon_button" id="prvl" icon="icons/16px/plus" icon_colour="text" colour="text" click_event="pkvl" appearance="" height="20" hidden="true" font="label" />

        <container height="15">
            <layout class="stick_to_sides_attachment" alignment="vertical, right" apply_to_children="true" />
            
            <widget class="picture" id="prvl" file="labels/custom/promise/promise" colour="text" appearance="" height="15" width="110" hidden="false" />
            <widget class="text" id="prlb" font="title" colour="bg" disabled_colour="faded white" alignment="centre" multiline="false" width="100">
                <translation id="text" translation_id="378026" type="use" value="Promise[COMMENT: FR 3585; manager promises; heading on promises table]" />
            </widget>
        </container>
    </container>
</panel>