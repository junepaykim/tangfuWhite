<panel>
  <real id="segment_count" value="4" />
  <boolean id="show_inaccurate_category" value="true" />
  
  <!-- Scale the polygon to fit the widget and draw it in code -->
  <boolean id="scale_picture" value="true" />
  <!-- First layer colour-->
  <record id="line_style">
    <colour id="colour" name="bagualine" />
    <real id="width" value="2" />
  </record>
  <!-- Second layer colour-->
  <record id="second_colour">
    <colour id="colour" name="fg accent" />
    <real id="width" value="2" />
  </record>
  <!-- Radial lines dividing each segment -->
  <record id="segment_divider_line_props">
    <colour id="colour" red="100" green="100" blue="60" alpha="10" />
    <real id="width" value="1.5" />
  </record>
  <!-- Style of the line around the edge of the polygon -->
  <record id="polygon_edge_props">
    <colour id="colour" name="text" />
    <real id="width" value="0.8" />
  </record>
  <!-- Colours (and number) of the concentric polygon rings -->
    <list id="ring_colours">
    <colour name="bagua1"/>
    <colour name="bagua2"/>
    <colour name="bagua3"/>
    <colour name="bagua4"/>
    <colour name="bagua5"/>
  </list>
  <list id="items">
    <!-- layer 1 (there is only one) -->
    <list>
      <record id="item">
        <translation id="name" translation_id="230010" type="use" value="Leadership" />
        <real id="max_value" value="20" />
        <integer id="angle" value="0" /><!-- 角度 -->
        <colour id="colour" name="text" />
        <flags id="standard_spec" value="text" />
		  <flags id="size" value="small" />
		<!-- 领导力 -->
        <list id="attributes">
          <integer value="Pinf" />
          <!-- 领导力 -->
          <integer value="Pdet" />
          <!-- 意志力 -->
          <integer value="Ptwr" />
          <!-- 团队合作 -->
        </list>
      </record>

   
      

      <record id="item">
      <translation id="name" translation_id="227776" type="use" value="Anticipation" />
        <real id="max_value" value="20" />
        <integer id="angle" value="90" /><!-- 角度 -->
        <colour id="colour" name="text" />
        <flags id="standard_spec" value="text" />
		  <flags id="size" value="small" />
		<!-- 预判 -->
        <list id="attributes">
          <integer value="Pant" />
          <!-- 预判 -->

      
        </list>
      </record>


      <record id="item">
      <translation id="name" translation_id="227916" type="use" value="Concentration" />
        <real id="max_value" value="20" />
        <integer id="angle" value="180" /><!-- 角度 -->
        <colour id="colour" name="text" />
        <flags id="standard_spec" value="text" />
		  <flags id="size" value="small" />
		  <!-- 集中 -->
        <list id="attributes">
            <integer value="Pcnt" />

        </list>
      </record>

      <record id="item">
        <translation id="name"  translation_id="230106" type="use" value="Mental"  />
        <real id="max_value" value="20" />
        <integer id="angle" value="270" /><!-- 角度 -->
        <colour id="colour" name="text" />
        <flags id="standard_spec" value="text" />
		  <flags id="size" value="small" />
		<!-- 精神 -->
        <list id="attributes">
          <integer value="Pwkr" />
          <!-- 工作投入 -->
          <integer value="Pbra" />
          <!-- 勇敢 -->
          <integer value="Pcmp" />
          <!-- 镇定 -->
		 

        </list>
      </record>

     

  
    </list>
  </list>
  <!-- outfield analyser panel -->
</panel>