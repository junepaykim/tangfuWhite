<!-- changed colours -->
<panel width="250" height="220">
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

	<list id="properties_to_forward">
		<record get_property="icon" set_property="valu" target="imag" />
		<record get_property="titl" set_property="valu" target="titl" />
		<record get_property="desc" set_property="valu" target="desc" />
		<record get_property="hint" set_property="valu" target="nply" />
		<record get_property="clke" set_property="clke" target="butn" />
		<record get_property="fDfo" set_property="Dfoc" target="butn" />

		<record get_property="soon" set_property="Shwn" target="cmso" />
		<record get_property="soon" set_property="hidn" target="nply" />
		<record get_property="soon" set_property="disa" target="mbox" />
	</list>
	
	<container class="inner_subtle_box" id="mbox">
		<attachment_group class="vertical_arrange" vertical_layout="40, 20, -1, 20" vertical_offset="10" vertical_gap="8" horizontal_inset="5" horizontal_alignment="horizontal" />

		<widget class="picture" id="imag" width="40" scale_picture="true" image_alignment="centre" retain_recolour_properties="true" red_replacement="fg tertiary" />

		<widget class="label" id="titl" size="14" font="title" colour="title" alignment="centre_x,centre_y" />
		
		<container>
			<attachment_group class="vertical_arrange" vertical_alignment="top" vertical_offset="0" vertical_gap="10" horizontal_inset="0" horizontal_alignment="horizontal" />

			<container hidden="true" id="cmso">
				<attachment_group class="vertical_arrange_autosize_horizontal_centre" />

					<container class="plain_box" width="140" height="18" appearance="boxes/custom/intro/tag/paper">
						<attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_offset="0" vertical_gap="5" horizontal_inset="5" horizontal_alignment="horizontal" />
						
						<widget class="label" size="small" style="bold" disabled_colour="black" alignment="centre_x,centre_y">
							<translation id="text" translation_id="541201" type="use" value="COMING 2022[COMMENT: AREA: Intro Screen; SUB-AREA: Game Mode selection; FR-BN: 36508; TONE: Formal; CHARLIMIT: N/A; REF-ID: n/a; NOTE: Promo text for a game mode that will be available at a later date]" />
						</widget>
					</container>
			</container>	
			
			<widget class="label" height="60" id="desc" colour="text" alignment="centre_x,top" auto_size="vertical" multiline="true" />
		</container>

		<widget class="label" id="nply" font="title" colour="fg accent" alignment="centre_x,centre_y" />
		
	</container>

	<widget class="button" appearance="buttons/custom/over state only/button" id="butn" auto_size="vertical" />

</panel>